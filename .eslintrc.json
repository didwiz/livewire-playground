{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:vue/essential"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["vue"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "tabWidth": 2,
                "useTabs": false,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "es5",
                "bracketSpacing": true,
                "arrowParens": "avoid"
            }
        ],
        "indent": [2, 2],
        "semi": 2,
        "quotes": ["error", "single", "avoid-escape"],
        "no-else-return": 1,
        "no-unreachable": 1,
        "no-empty": 1,
        "no-duplicate-case": 1,
        "block-scoped-var": 2,
        "vue/max-attributes-per-line": 0
    }
}
